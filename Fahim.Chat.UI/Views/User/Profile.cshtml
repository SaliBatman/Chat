            		<!-- SECTION 1 -->
	                <h4></h4>
                    <section>
                        <div class="form-header">
                            <div class="avartar">
                                <a href="#">
                                    @if (!Model.Files.Any())
                                    {
                                        <img src="~/images/avartar.png" alt="">

                                    }
                                    else
                                    {
                                        <img src="@Model.Files.OrderByDescending(s=>s.AddedDate).First().StoragePath" alt="">

                                    }
                                </a>
                                <div class="avartar-picker">
                                    <input type="file" name="files" id="file-1" class="inputfile" data-multiple-caption="{count} files selected" multiple />
                                    <label for="file-1">
                                        <i class="zmdi zmdi-camera"></i>
                                        <span>Choose Picture</span>
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-holder active">
                                    @Html.TextBoxFor(s=>s.Firsname , new  { @class = "form-control" })
                                </div>
                                <div class="form-holder">
                                    @Html.TextBoxFor(s => s.Lastname, new { @class = "form-control" })

                                </div>
                                <div class="form-holder">
                                    @Html.TextBoxFor(s => s.PhoneNumber, new { @class = "form-control" })

                                </div>
                            </div>
                        </div>
                        <div class="form-holder">
                            @Html.TextBoxFor(s => s.Username, new { @class = "form-control" })

                        </div>
                        <div class="form-holder">
                            @Html.TextBoxFor(s => s.About, new { @class = "form-control" })

                        </div>
